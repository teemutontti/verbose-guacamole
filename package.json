{
    "name": "app",
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "install-all": "npm install",
        "start": "npm-run-all --parallel start-frontend start-backend",
        "start-frontend": "npm run dev --workspace=frontend",
        "start-backend": "npm start --workspace=backend"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5"
    }
}